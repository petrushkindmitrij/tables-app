{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    //    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    //    "types": ["@emotion/core", "node", "jest", "@testing-library/jest-dom"],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@models/*": ["./src/models/*"],
      "@modules/*": ["./src/modules/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@ui-kit/*": ["./src/ui-kit/*"],
      "@ui-kit": ["./src/ui-kit"],
      "@utils/*": ["./src/utils/*"],
      "@api/*": ["./src/api/*"],
      "@config/*": ["./src/config/*"],
      "@store/*": ["./src/store/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["**/*.stories.tsx", "src/ufs/icons/*.jsx"]
}
